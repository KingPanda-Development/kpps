<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Growtopia - Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    .whole-box {
      color: black; /* Change text color */
      border-color: #87b8cc; /* Change border color */
      box-shadow: 0 0 10px #00b8ff;
    }
    
    .text-stroke {
      -webkit-text-stroke: 0.2px rgba(0, 0, 0, 0.8);
      color: white;
    }

    .text-shadow-heavy {
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4), 0px 4px 6px rgba(0, 0, 0, 0.6);
    }
    .text-shadow-heavy2 {
      text-shadow: 1px 0px 1px rgba(0, 0, 0, 0.1), 0px 2px 3px rgba(0, 0, 0, 1);
    }
    .text-shadow-heavy3 {
      font-size: 13px;
      text-shadow: 0.5px 0px 1px rgba(0, 0, 0, 0.1), 0px 2px 3px rgba(0, 0, 0, 0.5);
    }

    .glow-effect {
      border-radius: 0.5rem;
      box-shadow: 0 0 12px 4px rgba(0, 184, 255, 0.25);
      opacity: 0;
      transition: opacity 0.2s ease-in-out;
    }

    .glow-active .glow-effect {
      opacity: 1;
    }

    .stroke-text {
      text-shadow: 0 1px 2px rgba(0,0,0,0.5);
    }

    /* Tombol wipe animation */
    .btn-wipe {
      position: relative;
      overflow: hidden;
      z-index: 1;
      background-color: #00b8ff; /* Original background color */
      color: white;
      border-radius: 8px;
      padding: 10px 30px;
      border: 2px solid #00b8ff;
      font-size: 13px;
      font-weight: bold;
      transition: color 0.4s ease, border-color 0.4s ease;
    }

    .btn-wipe::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 800%;
      height: 800%;
      background-color: white;
      transform: translate(-150%, -150%) rotate(45deg);
      transition: transform 0.4s ease;
      z-index: -1;
    }

    .btn-wipe:hover::before {
      transform: translate(-50%, -50%) rotate(45deg);
    }

    .btn-wipe:hover {
      color: black; /* Change text color */
      border-color: black; /* Change border color */
      box-shadow: 0 0 10px #00b8ff;
    }

    .btn-wipe:active {
      transform: scale(0.97); /* Button shrink on active */
    }
    
    @keyframes floaty {
      0% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
      100% { transform: translateY(0); }
    }

    .floating-image {
      animation: floaty 3s ease-in-out infinite;
    }
  </style>
</head>
<body class="flex flex-col items-center justify-center h-screen" style="background-color: rgba(0, 0, 0, 0);">
  <div class="fixed inset-0 focus-within:shadow-[0_0_6px_1px_#00b8ff] flex items-center justify-center">
    <div class="whole-box relative bg-[#2b4d6d] border-4 border-[#87b8cc] p-6 w-[90%] max-w-md rounded-lg shadow-xl">
    
      <img src="https://cdn.discordapp.com/attachments/1275704825967022144/1363483093775683674/Diamond_Lock.png?ex=68063215&is=6804e095&hm=c1fc4f582183cad7f885965e4e2daf539b5db4262ea3856860c827bf9ada59b5&" class="floating-image absolute top-[10px] left-[3px] w-20 h-20 z-10" style="width: 40px; height: 40px;"/>
      <img src="https://cdn.discordapp.com/attachments/1275704825967022144/1363483016063615016/World_Lock.png?ex=68063203&is=6804e083&hm=3e9ed1a160fb9e041b199ca73b4c55700105bc9457f2aff7774db31ebf0c4871&" class="floating-image absolute top-[10px] left-[397px] w-20 h-20 z-10" style="width: 40px; height: 40px;"/>

      <p class="text-white text-center font-bold text-2xl text-stroke text-shadow-heavy">Login KingPanda-Topia</p>
      
      <div id="errorDiv" class="hidden flex flex-col mt-2 text-xs text-red-700 font-bold px-[5px] bg-[#2b4d6d] rounded text-shadow-heavy2">
        <a id="errorMessage"></a>
      </div>

      <form method="post" action="/player/growid/login/validate" accept-charset="UTF-8" id="loginForm" class="mt-3">
        <input name="type" value="log" type="hidden" />
        <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />

        <!-- GrowID -->
        <div class="mb-3">
          <label for="loginGrowId" class="block text-white text-shadow-heavy3">GrowID</label>
          <div class="relative">
            <div class="absolute inset-0 rounded-lg pointer-events-none glow-effect"></div>
            <div class="flex items-center border-2 border-[#81d4fa] rounded-lg bg-[#2b4d6d] px-2 py-1 focus-within:shadow-[0_0_6px_1px_#00b8ff] shadow-[0_3px_8px_#000000]">
              <i class="fas fa-user text-white mr-2 text-xs"></i>
              <input type="text" name="growId" id="loginGrowId"
                class="w-full bg-[#2b4d6d] text-white text-xs placeholder-white focus:outline-none text-shadow-sm"
                placeholder="Enter your growid" />
            </div>
          </div>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="loginPassword" class="block text-white text-shadow-heavy3">Password</label>
          <div class="relative">
            <div class="absolute inset-0 rounded-lg pointer-events-none glow-effect"></div>
            <div class="flex items-center border-2 border-[#81d4fa] rounded-lg bg-[#2b4d6d] px-2 py-1 focus-within:shadow-[0_0_6px_1px_#00b8ff] shadow-[0_3px_8px_#000000]">
              <i class="fas fa-lock text-white mr-2 text-xs"></i>
              <input type="password" name="password" id="loginPassword"
                class="w-full bg-[#2b4d6d] text-white text-xs placeholder-white focus:outline-none text-shadow-sm"
                placeholder="Enter your password">
              <button type="button" id="toggleLogPassword" class="text-white ml-2 focus:outline-none text-xs">
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>
        </div>

        <!-- Submit -->
        <div class="mb-3">
          <button id="loginButton" class="btn-wipe w-full text-shadow-heavy3">Login</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (localStorage.getItem('growId')) {
        document.getElementById('loginGrowId').value = localStorage.getItem('growId');
      }
    });

    document.getElementById('loginButton').addEventListener('click', function (event) {
      event.preventDefault();
      // Change background of the button to white on click
      const loginButton = document.getElementById('loginButton');
      loginButton.style.backgroundColor = 'whitesmoke';
      loginButton.style.color = 'black';
      loginButton.style.borderColor = 'black';

      const uName = document.getElementById('loginGrowId').value;
      const uPass = document.getElementById('loginPassword').value;

      if (!uName || !uPass) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerHTML = 'Username or Password is empty';
        return;
      } else if (uName.length < 4 || uPass.length < 4) {
        document.getElementById('errorDiv').classList.remove('hidden');
        document.getElementById('errorMessage').innerHTML = 'Username or Password must be at least 4 characters long';
        return;
      } else {
        document.getElementById('loginForm').submit();
        localStorage.setItem('growId', uName);
      }
    });

    document.getElementById('toggleLogPassword').addEventListener('click', function () {
      const field = document.getElementById('loginPassword');
      if (field.type === 'password') {
        field.type = 'text';
        this.innerHTML = '<i class="fas fa-eye-slash"></i>';
      } else {
        field.type = 'password';
        this.innerHTML = '<i class="fas fa-eye"></i>';
      }
    });
  </script>
</body>
</html>
